<% flash.each do |type, message|
  message = [ message ] if message.class == String
  message.each do |m| %>
    <div class="alert <%= type %> fade in">
      <button class="close" data-dismiss="alert">Ã—</button>
      <%= m %>
    </div>
  <% end %>
<% end %>


<script type="text/javascript">
  $(document).ready(function(){
    setTimeout(function(){
    $('#flash').fadeOut();
    }, 5000);
  })
</script>