<h3 class="o-heading__level2">Files</h3>
<table class="t-landing__pdftable">
  <% @resource.file_uploads[0..99].each do |fu| %>
    <tr>
      <td><%= fu.upload_file_name %></td>
      <td><%= filesize(fu.upload_file_size) %></td>
      <td><%= fu.upload_content_type %></td>
    </tr>
  <% end %>
  <% if @resource.file_uploads.length > 100 %>
    <tr><td>...</td><td>&nbsp;</td><td>&nbsp;</td></tr>
  <% end %>
</table>