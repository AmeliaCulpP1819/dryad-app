<%# license object from main configuration should be passed in as local 'license', rights object as 'right' %>
<% if license.nil? %>
  <%= render partial: 'stash_datacite/licenses/no_license_review', locals: {right: right} %>
<% else %>
  <%= image_tag("licenses/#{license['badge']}", alt: "#{license['name']} logo",
                style: 'float: right') %>

  <%= link_to license['name'], license['uri'] %> license.

  <p>
    <%= license['explanation'] %>
  </p>
  <div style="clear: both"></div>
<% end %>