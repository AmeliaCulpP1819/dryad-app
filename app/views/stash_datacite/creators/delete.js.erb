$('.remove_record').bind('ajax:success', function() {
  $(this).closest('form').remove();
  $('.c-orcid').hide();
  <% unless @resource.nil? %>
    $('.js-add_orcid_link').replaceWith('<%= j render partial: "stash_datacite/creators/add_orcid_link", locals: {  resource: @resource } %>')
  <% end %>
  hideRemoveLinkCreators();
});