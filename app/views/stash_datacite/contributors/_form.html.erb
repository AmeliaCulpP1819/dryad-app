<%# the local variable 'contributor' should be passed in to this partial when there are multiple per page %>
<% form_id = unique_form_id(contributor) %>
<%= form_for(contributor, url: path, remote: true, authenticity_token: true, html: { id: form_id, class: 'c-input__inline' }) do |f| %>
<%#= render "datacite/shared/error_messages", target: @contributor %>
	<div class="c-input">
		<%= f.label :contributor_name, "Granting Organization", class: 'c-input__label' %>
		<%= f.text_field :contributor_name, class: "funders c-input__text" %>
	</div>
	<div class="c-input">
		<%= f.label :award_number, "Award Number", class: 'c-input__label' %>
		<%= f.text_field :award_number, class: "award_number c-input__text" %>
	</div>
	<%= button_to 'remove', stash_datacite.contributors_delete_path(contributor.id || 'new'), method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: 'remove_record t-describe__remove-button o-button__remove' %>
	<%= f.hidden_field :contributor_type, value: :funder %>
	<%= f.hidden_field :resource_id %>
	<%= f.hidden_field :id %>
	<%= hidden_field_tag(:form_id, form_id) %>
<% end %>