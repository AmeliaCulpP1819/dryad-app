<%# the local variable 'resource_type' should be passed in to this partial when there are multiple per page %>
<%= form_for(resource_type, url: 'resource_types_path', remote: true, namespace: resource_type.id, authenticity_token: true) do |f| %>
  <%#= render "datacite/shared/error_messages", :target => @resource_type %>
  <strong><%= f.label :resource_type, "Type of Data" %></strong><br/>
  <%= f.select :resource_type, options_for_select([[ "Spreadsheet/Database", :spreadsheet],["Image", :image],["Sound", :sound],["Video", :video],["Text", :text],["Software", :software],["Multiple Types", :multiple_types],["Other", :other]]) %>
  <%= f.hidden_field :resource_type %>
  <%= f.hidden_field :resource_id %>
  <br/>
<% end %>