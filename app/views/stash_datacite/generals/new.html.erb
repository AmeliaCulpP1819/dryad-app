<div>
  <p><h3>Describe your dataset</h3>
  * required fields</p>
</div>

<div>
  <%= form_for :general, url: generals_create_path do |f| %>

    <%= f.hidden_field :resource_id, value: params[:resource_id] %>

    <fieldset>
      <legend><strong>Basic Information</strong></legend>
        <%= render "stash_datacite/titles/form" %><br/>
        <%= render "stash_datacite/creators/form" %><br/>
        <%= render "stash_datacite/resource_types/form" %>
        <strong><%= label_tag :description, "Abstract" %></strong><br/>
        <%= render partial: "stash_datacite/descriptions/form", locals: { description_type: "abstract" }  %>
    </fieldset>
    <br/>

    <fieldset>
      <legend><strong>Data Description(Optional)</strong></legend>
        <%= render "stash_datacite/contributors/form"%><br/>
        <%= render "stash_datacite/subjects/form" %>
        <strong><%= label_tag :description, "Methods" %></strong>&nbsp;&nbsp;How was this dataset collected? How has it been processed?<br/>
        <%= render partial: "stash_datacite/descriptions/form", locals: { description_type: "methods" } %>
        <strong><%= label_tag :description, "Usage Notes" %></strong>&nbsp;&nbsp;What else would someone need to know to use this dataset?<br/>
        <%= render partial: "stash_datacite/descriptions/form", locals: { description_type: "usage_notes" } %>
        <%#= render "stash_datacite/relations/form" %>
    </fieldset>


    <%#= render "stash_datacite/publishers/form" %>
    <%#= render "stash_datacite/publication_years/form" %>

  </br>
    <%= f.submit 'Submit', class: "btn btn-success" %>
    <%= link_to 'Back', stash_engine.resources_path, class: "btn" %>
  <% end %>
</div>