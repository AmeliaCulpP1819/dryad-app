default: &default
  repository:
    type: merritt
    endpoint: "https://merritt-repository.cdlib.org/object/update"
    username: "username"
    password: "password"
    profile: "repository_name_submitter_content"
  contact_email: ["contact1@example.edu", "contact2@example.edu"]
  abbreviation: "UCOP"
  short_name: "UC Office of the President"
  long_name: "University of California, Office of the President"
  landing_page: ".ucop.edu"
  external_id_strip: "ucop.edu$"
  tenant_id: cdl
  logo: blank_institution_logo.png
  authentication:
    method: shibboleth
    entity_id: "urn:mace:incommon:ucop.edu"
    entity_domain: ".ucop.edu"

