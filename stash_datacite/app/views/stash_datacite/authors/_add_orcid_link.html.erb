<% unless resource.authors.any? { |author| author.author_orcid } %>
  <%= link_to "Connect your ORCID iD", "/stash/auth/orcid?resource_id=#{resource.id}&origin=metadata", class: "js-add_my_Orcid_ID t-describe__add-button o-button__connect-orcid" %>
  <a role="button" aria-label="help" href="" class="o-button__help" title="ORCID provides a persistent digital identifier that distinguishes you from other researchers. Learn more at orcid.org"></a>
<% end %>

<script type="text/javascript">
$('.js-add_my_Orcid_ID').bind('click', function(){
    // remove all event handlers with unbind()
    // add a new function that prevents click from working
    $(this).unbind().bind('click', function(){
      return false;
    });
});
</script>
