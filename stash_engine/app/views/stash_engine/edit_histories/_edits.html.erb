<%# locals: presenters (array of StashDatacite::ResourcesController::DatasetPresenter) %>
<table class="c-lined-table">
  <tr class="c-lined-table__head">
    <th class="<%# sort_display('updated_at', @sort_column) %>">
      <%= sort_by 'updated_at', title: 'Timestamp', current_column: @sort_column %>
    </th>
    <th class="<%# sort_display('edited_by_name', @sort_column) %>">
      <%= sort_by 'edited_by_name', title: 'Modified By', current_column: @sort_column %>
    </th>
    <th class="<%# sort_display('version', @sort_column) %>">
      <%= sort_by 'version', title: 'Version', current_column: @sort_column %>
    </th>
    <th class="<%# sort_display('user_comments', @sort_column) %>">
      <%= sort_by 'user_comments', title: 'Notes', current_column: @sort_column %>
    </th>
  </tr>

  <% presenters.each do |p| %>
    <tr class="c-lined-table__row">
      <td>
        <%= formatted_datetime(p.updated_at) %>
      </td>
      <td>
        <%= p.edited_by_name_w_role %>
      </td>
      <td>
        <%= p.version %>
      </td>
      <td>
        <%= p.comment %>
      </td>
    </tr>
  <% end %>
</table>